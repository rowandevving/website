    icon: "i-simple-icons-youtube"
  },
  {
    name: "Modrinth",
    url: "https://modrinth.com/user/rowandev",
    icon: "i-simple-icons-modrinth"
  },

]

const people = [
  {
    name: "Catter",
    url: "https://github.com/catter1",
    src: "https://avatars.githubusercontent.com/u/63272345"
  },
  {
