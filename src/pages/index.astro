    src: "https://codeberg.org/avatars/62cbdd8dccd084d4ceeda0f2e59540fd534c2daaa87458c70dab3cf8a7ac9600?size=512"
  },
  {
    name: "WorldWidePixel",
    url: "https://worldwidepixel.ca",
    src: "https://avatars.githubusercontent.com/u/58098422"
  },
  {
    name: "Sarc",
    url: "https://linktr.ee/sarcasmtree",
    src: "https://ugc.production.linktr.ee/0198808b-ddf5-4d2e-9c9d-fa7a8c998762_Untitled104-20240523100812.png?io=true&size=avatar-v1_0"
  },
  {
    name: "Devin",
    url: "https://intergrav.xyz",
    src: "https://avatars.githubusercontent.com/u/42325132"
  },
  {
